@{
    ViewBag.Title = "Thêm Mới Sách";
    Layout = null;
    Quan_Ly_TV.Models.QuanLyThuVienEntities1 db = new Quan_Ly_TV.Models.QuanLyThuVienEntities1();
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="/Asset/User/css/sb-admin-2.min.css" rel="stylesheet">
    <style>
        .bg-register-image {
            background: url("https://img.lovepik.com/photo/40190/9674.jpg_wh300.jpg") no-repeat center;
        }
    </style>
</head>
<body class="">
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"><img style="background: url('https://img.lovepik.com/photo/40190/9674.jpg_wh300.jpg')" /></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Thêm mới Sách</h1>
                            </div>
                            <form class="user" method="post" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="exampleFirstName" name="MaSach"
                                               placeholder="MÃ SÁCH">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user" id="exampleLastName" name="TenSach"
                                               placeholder="TÊN SÁCH">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        <select name="TheLoai" class="form-control">
                                            <option>THỂ LOẠI</option>
                                            @foreach (var loai in db.TheLoai.ToList())
                                            {
                                                <option value="@loai.MaTheLoai">@loai.TenTheLoai</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="exampleLastName" name="TacGia"
                                               placeholder="TÁC GIẢ">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        <label style="color: brown; font-weight: normal">NGÀY XUẤT BẢN :</label>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="date" class="form-control form-control-user" id="exampleLastName" name="NgayXuatBan" />
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        <label style="color: brown; font-weight: normal">Số lượng :</label>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="number" class="form-control form-control-user" id="exampleLastName" name="SoLuong" />
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6">
                                        <label style="color: brown; font-weight: normal">Thêm ảnh bìa :</label>
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="file" class="form-control-user" id="exampleLastName" name="AnhBia" />
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Xác nhận
                                </button>
                                <div class="col-sm-6" style="padding-top: 20px">
                                    <span style="color: red; font-weight: initial">@TempData["thongbao"]</span>
                                </div>
                                <div style="text-align: right; margin-top: 8px">
                                    <p><a href="/Book/ListBook">Quay Lại</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="/Asset/User/vendor/jquery/jquery.min.js"></script>
    <script src="/Asset/User/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="/Asset/User/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="/Asset/User/js/sb-admin-2.min.js"></script>
</body>
</html>



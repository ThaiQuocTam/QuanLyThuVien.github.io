@model Quan_Ly_TV.Models.Login

@{
    ViewBag.Title = "themTK";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2 style="color: #e84407; text-align:left">Thêm tài khoản</h2>
<link href="/Asset/User/css/sb-admin-2.min.css" rel="stylesheet">
<link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">
<style>
    .btn-sua {
        background-color: #8d8282;
        color: #fff;
    }

        .btn-sua:hover {
            background-color: red;
            color: #fff;
        }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <label for="usr" style="color: brown; font-weight: normal">Tên tài khoản :</label>
        <input type="text" class="form-control" id="usr" name="UserName" />
    </div>

    <div class="form-group">
        <label for="usr" style="color: brown; font-weight: normal">Mật khẩu :</label>
        <input type="text" class="form-control" id="usr" name="PassWord" />
    </div>

    <div class="form-group">
        <label for="usr" style="color: brown; font-weight: normal">Quyền :</label>
        <br />
        <select class="form-control" name="PhanQuyen">
            <option value="1">Nhân viên</option>
            <option value="2">Quản lý</option>
        </select>
    </div>

    <div class="form-group ">
        <div class="">
            <input type="submit" value="Lưu" class="form-control btn btn-default btn-sua" />
        </div>
    </div>

    <div class="col-sm-6" style="padding-top: 20px">
        <span style="color: red; font-weight: initial">@ViewBag.themTK</span>
    </div>
</div>
}
<div style="text-align: right; margin-top: 8px">
    <p><a href="/Home/HomeAdmin">Quay Lại</a></p>
</div>

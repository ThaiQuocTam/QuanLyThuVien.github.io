@model Quan_Ly_TV.Models.TheLoai

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2 style="color: #e84407; text-align:left">Chỉnh sửa thể loại</h2>
<link href="/Asset/User/css/sb-admin-2.min.css" rel="stylesheet">
<link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">
<style>
    .btn-sua {
        background-color: #8d8282;
        color: #fff;
    }

        .btn-sua:hover {
            background-color: red;
            color: #fff;
        }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdTL)

        <div class="form-group">
            <label for="usr" style="color: brown; font-weight: normal">Mã thể loại :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaTheLoai, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.MaTheLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="usr" style="color: brown; font-weight: normal">Tên thể loại :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTheLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTheLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="form-control btn btn-default btn-sua" />
            </div>
        </div>
    </div>

    <div style="text-align: left; margin-top: 8px">
        <p><a href="/Theloai/DanhSachTL">Quay Lại</a></p>
    </div>

    <div class="col-sm-6" style="padding-top: 20px">
        <span style="color: red; font-weight: initial">@TempData["thongbao"]</span>
    </div>
}



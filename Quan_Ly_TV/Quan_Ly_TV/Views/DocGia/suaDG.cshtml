@model Quan_Ly_TV.Models.DocGia

@{
    ViewBag.Title = "suaDG";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    Quan_Ly_TV.Models.QuanLyThuVienEntities1 db = new Quan_Ly_TV.Models.QuanLyThuVienEntities1();
}


<h2 style="color: #e84407; text-align:left">Chỉnh sửa thông tin Độc Giả</h2>
<link href="/Asset/User/css/sb-admin-2.min.css" rel="stylesheet">
<link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">
<style>
    .btn-sua{
        background-color: #8d8282;
        color: #fff;
    }
    .btn-sua:hover {
        background-color: red;
        color: #fff;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label for="usr" style="color: brown; font-weight: normal">Mã Độc Giả :</label>
        <input type="text" class="form-control" id="usr" value="@Model.MaDocGia" name="MaDocGia" readonly />
    </div>

    <div class="form-group">
        <label for="usr" style="color: brown; font-weight: normal">Họ và tên :</label>
        <input type="text" class="form-control" id="usr" value="@Model.HoTen" name="HoTen" />
    </div>

    <div class="form-group">
        <label for="usr" style="color: brown; font-weight: normal">Ngày sinh :</label>
        <input type="datetime" class="form-control" id="usr" value="@String.Format("{0: dd-MM-yyyy}", Model.NgaySinh)" name="NgaySinh" />
    </div>

    <div class="form-group">
        <label for="usr" style="color: brown; font-weight: normal">Địa chỉ :</label>
        <input type="text" class="form-control" id="usr" value="@Model.DiaChi" name="DiaChi" />
    </div>

    <div class="form-group">
        <label for="usr" style="color: brown; font-weight: normal">Giới tính :</label>
        <br />
        <select class="form-control" name="GioiTinh">
            <option value="True" @Html.Raw(Model.GioiTinh == true ? "selected" : "")>Nam</option>
            <option value="False" @Html.Raw(Model.GioiTinh == false ? "selected" : "")>Nữ</option>
        </select>
    </div>

    <div class="form-group">
        <label for="usr" style="color: brown; font-weight: normal">Điện thoại :</label>
        <input type="number" class="form-control" id="usr" value="@Model.SoDienThoai" name="SoDienThoai" />
    </div>

    <div class="form-group">
        <label for="usr" style="color: brown; font-weight: normal">Email :</label>
        <input type="text" class="form-control" id="usr" value="@Model.Email" name="Email" />
    </div>

    <div class="form-group">
        <label for="usr" style="color: brown; font-weight: normal">Loại độc giả :</label>
        <select class="form-control" name="LoaiDG">
            @foreach (var loaiDG in db.LoaiDG.ToList())
            {
                <option value="@loaiDG.MaLoaiDG" @Html.Raw(Model.LoaiDG == loaiDG.MaLoaiDG ? "selected" : "")>@loaiDG.TenLoaiDG</option>
            }
        </select>
    </div>

    <div class="form-group ">
        <div class="">
            <input type="submit" value="Lưu" class="form-control btn btn-default btn-sua" />
        </div>
    </div>

    <div style="text-align: right; margin-top: 8px">
        <p><a href="/DocGia/dsDocGia">Quay Lại</a></p>
    </div>

    <div class="col-sm-6" style="padding-top: 20px">
        <span style="color: red; font-weight: initial">@ViewBag.sua</span>
    </div>
</div>
}
